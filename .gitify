data_directory: _gitify/
backup_directory: _backup/
data:
  contexts:
    class: modContext
    primary: key
  context_settings:
    class: modContextSetting
    primary: [context_key, key]
    exclude_keys:
      - editedon
  system_settings:
    class: modSystemSetting
    primary: key
    exclude_keys:
      - editedon
    where:
      - 'key:NOT IN':
        - environment
        - 'gitifywatch.gitify_path'
        - 'mail_smtp_hosts'
        - 'mail_smtp_user'
        - 'mail_smtp_pass'
        - 'mail_smtp_port'
        - 'mail_smtp_prefix'
        - 'mail_use_smtp'
  content_types:
    class: modContentType
    primary: name
  content:
    type: content
    exclude_keys:
      - createdon
      - editedby
      - editedon
  categories:
    class: modCategory
    primary: category
  templates:
    class: modTemplate
    primary: templatename
  template_variables:
    class: modTemplateVar
    primary: name
  template_variables_access:
    class: modTemplateVarTemplate
    primary: [tmplvarid, templateid]
  chunks:
    class: modChunk
    primary: name
    extension: .html
  snippets:
    class: modSnippet
    primary: name
    extension: .php
  plugins:
    class: modPlugin
    primary: name
    extension: .php
  plugin_events:
    class: modPluginEvent
    primary: [pluginid,event]
    
  users:
    class: modUser
    primary: id
  user_profiles:
    class: modUserProfile
    primary: internalKey
    exclude_keys:
      - sessionid
      - thislogin
      - lastlogin
      - logincount
      - failedloginattempts
  user_groups:
    class: modUserGroup
    primary: id
  user_group_members:
    class: modUserGroupMember
    primary: id
  user_group_roles:
    class: modUserGroupRole
    primary: id
      
  events:
    class: modEvent
    primary: name
  namespaces:
    class: modNamespace
    primary: name
  mediasources:
    class: modMediaSource
    primary: id
  mediasource_elements:
    class: sources.modMediaSourceElement
    primary: [source, object_class, object, context_key]
  extension_packages:
    class: modExtensionPackage
    primary: namespace
    exclude_keys:
      - created_at
      - updated_at
  
  dashboards:
    class: modDashboard
    primary: [id, name]
  dashboard_widgts:
    class: modDashboardWidget
    primary: id
  dashboard_widget_placement:
    class: modDashboardWidgetPlacement
    primary: [dashboard, widget]

  quickstartbuttons_sets:
    class: qsbSet
    primary: name
    package: quickstartbuttons
  quickstartbuttons_set_usergroups:
    class: qsbSetUserGroup
    primary: [usergoup, set]
  quickstartbuttons_icons:
    class: qsbIcon
    primary: name
  quickstartbuttons_buttons:
    class: qsbButton
    primary: text

  scheduler_tasks:
    class: sTask
    primary: [namespace, reference]
    package: scheduler

  cb_fields:
    class: cbField
    primary: name
    package: contentblocks
  cb_layouts:
    class: cbLayout
    primary: name
  cb_templates:
    class: cbTemplate
    primary: name
  cb_defaults:
    class: cbDefault
    primary: id

  moregallery_image:
    class: mgImage
    primary: [resource, id]
    package: moregallery
    exclude_keys:
      - editedon
      - mgr_thumb_path
      - file_url
      - file_path
      - view_url
  moregallery_image_tag:
    class: mgImageTag
    primary: id
  moregallery_image_crop:
    class: mgImageCrop
    primary: id
  moregallery_tag:
    class: mgTag
    primary: display

  collections_settings:
    class: CollectionSetting
    primary: id
    package: collections
  collections_templates:
    class: CollectionTemplate
    primary: [id, name]
  collections_templatecolumns:
    class: CollectionTemplateColumn
    primary: id
  collections_resourcetemplates:
    class: CollectionResourceTemplate
    primary: [resource_template, collection_template]
  collections_selections:
    class: CollectionSelection
    primary: [resource, collection]

packages: 
  modx.com:
    service_url: http://rest.modx.com/extras/
    packages:
      - ace
      - breadcrumbs
      - collections
      - getresources
      - getpage
      - getcache
      - hits
      - formit
      - seopro
      - translit
      - templateselect
      - wayfinder
      - taglister
      - updater
      - locker
      - simplesearch
      - switch
      - pthumb
environments:
  modx.today:
    name: Production
    branch: production
    auto_commit_and_push: true
    commit_delay: 15
  localhost.modx.today:
    name: Development
    auto_commit_and_push: false
  defaults:
    auto_commit_and_push: false
    commit_delay: instant